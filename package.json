{
  "name": "wordserve",
  "description": "WordServe is a lightweight and fast autocompletion and suggestions engine for browsers.",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prep": "bun run scripts/prep.ts",
    "prep:force": "bun run scripts/prep.ts --force",
    "build": "bun run scripts/manifest.ts && wxt build",
    "build:firefox": "bun run scripts/manifest.ts && wxt build -b firefox",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "postinstall": "wxt prepare",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "fflate": "^0.8.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.12.3",
    "@happy-dom/global-registrator": "^18.0.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.541.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.20.8"
  },
  "trustedDependencies": [
    "spawn-sync"
  ]
}
